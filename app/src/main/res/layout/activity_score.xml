<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.yasin.contatordejogos.ScoreActivity">

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="437dp"
        android:padding="@dimen/activity_padding"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:id="@+id/layout_j1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nome1"
                android:layout_width="@dimen/text_name_width"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_name_size"
                android:text="TextView" />
            <TextView
                android:id="@+id/tv_score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="score" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_j2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nome2"
                android:layout_width="@dimen/text_name_width"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_name_size"
                android:text="TextView" />
            <TextView
                android:id="@+id/tv_score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="score" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_j3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nome3"
                android:layout_width="@dimen/text_name_width"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_name_size"
                android:text="TextView" />
            <TextView
                android:id="@+id/tv_score3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="score" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_j4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nome4"
                android:layout_width="@dimen/text_name_width"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_name_size"
                android:text="TextView" />
            <TextView
                android:id="@+id/tv_score4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="score" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_j5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nome5"
                android:layout_width="@dimen/text_name_width"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_name_size"
                android:text="TextView" />
            <TextView
                android:id="@+id/tv_score5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="score" />

        </LinearLayout>

        <include layout="@layout/view_line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/primaryDarkColor"
            android:text="TOTAL"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
